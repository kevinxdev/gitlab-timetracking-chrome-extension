{
  "name": "GitLab Timetracker",
  "description": "Track your time on GitLab",
  "version": "1.0.0",
  "manifest_version": 3,
  "author": "Kevin Fritsch",
  "background": {
    "service_worker": "src/js/background.js"
  },
  "permissions": ["storage"],
  "action": {
    "default_popup": "src/html/popup.html",
    "default_icon": {
      "16": "src/img/gitlab16.png",
      "32": "src/img/gitlab32.png",
      "48": "src/img/gitlab48.png",
      "128": "src/img/gitlab128.png"
    }
  },
  "icons": {
    "16": "src/img/gitlab16.png",
    "32": "src/img/gitlab32.png",
    "48": "src/img/gitlab48.png",
    "128": "src/img/gitlab128.png"
  },
  "options_page": "src/html/options.html"
}
